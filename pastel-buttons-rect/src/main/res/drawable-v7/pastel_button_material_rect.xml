<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/pastel_button_inset_vertical"
    android:insetLeft="@dimen/pastel_button_inset_horizontal"
    android:insetRight="@dimen/pastel_button_inset_horizontal"
    android:insetTop="@dimen/pastel_button_inset_vertical">

  <shape android:shape="rectangle">

    <!-- Because we're using backgroundTint we need to set this shape color
    to transparent so that disabled state will be the same on appcompat when tint is applied
    on top of this color. -->

    <solid
        android:color="@android:color/transparent" />
    <padding
        android:bottom="@dimen/pastel_button_padding_vertical"
        android:left="@dimen/pastel_button_padding_horizontal"
        android:right="@dimen/pastel_button_padding_horizontal"
        android:top="@dimen/pastel_button_padding_vertical" />
  </shape>
</inset>