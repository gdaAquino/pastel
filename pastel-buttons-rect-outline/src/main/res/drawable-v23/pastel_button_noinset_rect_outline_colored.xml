<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="?colorControlHighlight">
    <item android:id="@android:id/mask">
        <color android:color="@android:color/white"/>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:tint="@color/pastel_button_background_colored">
            <solid
                android:color="@android:color/transparent"/>
            <stroke
                android:width="@dimen/pastel_button_outline_stroke_width"
                android:color="?colorButtonNormal"/>
            <padding
                android:bottom="@dimen/pastel_button_padding_vertical"
                android:left="@dimen/pastel_button_padding_horizontal"
                android:right="@dimen/pastel_button_padding_horizontal"
                android:top="@dimen/pastel_button_padding_vertical"/>
        </shape>
    </item>
</ripple>