<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorControlHighlight">
  <item android:id="@android:id/mask">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/pastel_button_rect_rounded_outline_radius" />
      <solid android:color="@android:color/white" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <corners
          android:radius="@dimen/pastel_button_rect_rounded_outline_radius" />
      <solid
          android:color="@android:color/transparent" />
      <stroke
          android:color="@android:color/white"
          android:width="@dimen/pastel_button_rect_rounded_outline_stroke_width" />
      <padding
          android:bottom="@dimen/pastel_button_padding_vertical"
          android:left="@dimen/pastel_button_padding_horizontal"
          android:right="@dimen/pastel_button_padding_horizontal"
          android:top="@dimen/pastel_button_padding_vertical" />
    </shape>
  </item>
</ripple>